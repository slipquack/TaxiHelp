<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:weightSum="100"
    android:background="@mipmap/taxi_vertikal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Таксисту в помощь"
        android:textColor="#ffff"
        android:id="@+id/text_view"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/rent"
        android:onClick="button_rent"
        android:background="@mipmap/rent"
        android:src="@drawable/button_stroke"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:id="@+id/kafe"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@mipmap/kafe"
        android:onClick="button_kafe"
        android:src="@drawable/button_stroke"
        android:layout_toRightOf="@id/rent"
        android:layout_above="@id/rent"
        android:layout_marginLeft="-25dp"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:id="@+id/repair"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@mipmap/repair"
        android:onClick="button_repair"
        android:src="@drawable/button_stroke"
        android:layout_below="@id/kafe"
        android:layout_toRightOf="@id/kafe"
        android:layout_marginLeft="-25dp"/>

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/sink"
        android:onClick="button_sink"
        android:src="@drawable/button_stroke"
        android:background="@mipmap/sink"
        android:layout_toLeftOf="@id/rent"
        android:layout_above="@id/rent"
        android:layout_marginRight="-25dp"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/service"
        android:onClick="button_service"
        android:src="@drawable/button_stroke"
        android:background="@mipmap/service"
        android:layout_toLeftOf="@id/sink"
        android:layout_below="@id/sink"
        android:layout_marginRight="-25dp"/>

</RelativeLayout>